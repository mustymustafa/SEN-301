<div class="form-group">
      <label><b>Password</b></label>
      <input class ="form-control" type="password" placeholder="********" name="password" required>
        </div>

<div class="form-group">
      <label><b>Secret Word </b></label>
      <input class ="form-control" type="password" placeholder="********" name="secretWord" required>
        </div>

                <div class="form-group">
                     <button id="demo" onClick="myFunction()" class="btn btn-lg btn-success btn-block">login</button>
                </div>
            </form>
</div>
