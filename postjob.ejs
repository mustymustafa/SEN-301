

 <% include partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a new Task</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/postjob" method="POST">
            
    <div class="form-group">
      <label for="category">Select Category:</label>
      <select class="form-control" id="category" name="category">
        <option>Web development</option>
        <option>Mobile development</option>
        <option>Photography</option>
        <option>Writing</option>
      </select>
      </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter Name Of Job">
                </div>
        
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description" minlength="50" maxlength="100">
                </div>

<div class="form-group">
                    <input class="form-control" type="Number" name="price" placeholder="Price(â‚¦): 1,000">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="start" placeholder="Start date">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="end" placeholder="End date">
                </div>

                
                <div class="form-group">
                    <input class="form-control" type="text" name="skills" placeholder="skills required: HTML5, NODEJS, JAVASCRIPT">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/fldashboard">Go Back</a>
        </div>
    </div>
</div>
